<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </FrameLayout>


        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/android_material_design_spinner"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="67dp"
            android:drawableEnd="@drawable/arrow"
            android:hint="" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/android_material_design_spinner"
            android:id="@+id/TextViewDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos personales:"
            android:textColor="@color/colorText"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_below="@+id/TextViewDatos"
            android:id="@+id/EditTextNombre"
            android:layout_height="wrap_content"
            android:hint="Nombre(s)"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorText"
            android:textColor="@color/colorText"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_below="@+id/EditTextNombre"
            android:id="@+id/EditTextApellido"
            android:layout_height="wrap_content"
            android:hint="Apellido(s)"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorText"
            android:textColor="@color/colorText"
            android:layout_width="fill_parent">
        </EditText>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_below="@+id/EditTextApellido"
            android:id="@+id/TextViewLocalizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos localización:"
            android:textColor="@color/colorText"
            android:textSize="10pt">
        </TextView>
        <LinearLayout
            android:layout_below="@+id/TextViewLocalizacion"
            android:id="@+id/linearLayoutLocalizacionColonioa"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"

            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/EditTextColonia"
                android:layout_height="wrap_content"
                android:hint="Colonia *"
                android:inputType="textPersonName"
                android:layout_marginStart="0dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:layout_width="180dp">
            </EditText>
            <EditText
                android:id="@+id/EditTextCP"
                android:layout_height="wrap_content"
                android:hint="C.P."
                android:inputType="textPersonName"
                android:layout_marginStart="10dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:layout_width="200dp">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/linearLayoutLocalizacionColonioa"
            android:id="@+id/linearLayoutLocalizacionCalle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/EditTextCalle"
                android:layout_height="wrap_content"
                android:hint="Calle *"
                android:inputType="textPersonName"
                android:layout_marginStart="0dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:layout_width="180dp">
            </EditText>
            <EditText
                android:id="@+id/EditTextNum"
                android:layout_height="wrap_content"
                android:hint="Numero"
                android:inputType="textPersonName"
                android:layout_marginStart="10dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:layout_width="200dp">
            </EditText>

        </LinearLayout>


        <CheckBox
            android:layout_below="@+id/linearLayoutLocalizacionCalle"
            android:id="@+id/CheckBoxLocalizacion"
            android:layout_height="wrap_content"
            android:text="utilizar localización actual"
            android:textColor="@color/colorText"
            android:layout_width="fill_parent">
        </CheckBox>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_below="@+id/CheckBoxLocalizacion"
            android:id="@+id/TextViewDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de Hechos:"
            android:textColor="@color/colorText"
            android:textSize="10pt">
        </TextView>
        <EditText
            android:layout_below="@+id/TextViewDescripcion"
            android:id="@+id/EditTextReporte"
            android:layout_height="wrap_content"
            android:hint="Reporte"
            android:inputType="textMultiLine"
            android:lines="5"
            android:textColorHint="@color/colorText"
            android:textColor="@color/colorText"
            android:layout_width="fill_parent">
        </EditText>

        <EditText
            android:layout_below="@+id/EditTextReporte"
            android:id="@+id/EditTextInvolucrados"
            android:layout_height="wrap_content"
            android:hint="Posibles involucrados"
            android:inputType="textMultiLine"
            android:lines="2"
            android:textColorHint="@color/colorText"
            android:textColor="@color/colorText"
            android:layout_width="fill_parent">
        </EditText>

        <TextView
            android:id="@+id/TextViewElementosExtras"
            android:layout_width="169dp"
            android:layout_height="20dp"
            android:layout_below="@+id/EditTextInvolucrados"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_agregarcontenido"
            android:text="Agregar elementos extras"
            android:textColor="@color/colorText"
            android:textSize="7pt">

        </TextView>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/TextViewElementosExtras"
            android:id="@+id/TextViewObligatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Campos obligatorios"
            android:textColor="@color/colorError"
            android:textSize="6pt">
        </TextView>

        <LinearLayout
            android:layout_below="@+id/TextViewElementosExtras"
            android:id="@+id/linearLayoutButtons"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewCancelar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="155dp"
                    android:layout_height="54dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cancelar"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewRegistrar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="25dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Registrar"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </RelativeLayout>


</ScrollView>




